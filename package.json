{
  "name": "react-flexible-workbench",
  "version": "5.1.0",
  "description": "Provides a flexible workspace UI for single-page web apps based on GoldenLayout",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run build:lib",
    "build:lib": "tsc && copyfiles -u 1 src/*.css lib",
    "dist": "npm run build && npm run dist:file && npm run dist:minify",
    "dist:file": "webpack --config webpack.build.js",
    "dist:minify": "MINIFY=1 npm run dist:file",
    "clean": "rimraf lib dist",
    "lint": "tslint --project tsconfig.json --type-check --format stylish",
    "preversion": "npm test",
    "start": "webpack-dev-server --inline --config webpack.config.js --content-base examples/",
    "version": "npm run build",
    "postversion": "git push && git push --tags",
    "test": "npm run build"
  },
  "author": "Tam√°s Nepusz <ntamas@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ntamas/react-flexible-workbench.git"
  },
  "devDependencies": {
    "@types/jquery": "^3.3.38",
    "@types/lodash-es": "^4.17.3",
    "@types/node": "^14.0.6",
    "@types/prop-types": "^15.7.3",
    "@types/react": "^16.9.35",
    "@types/react-beautiful-dnd": "^13.0.0",
    "@types/react-dom": "^16.9.8",
    "awesome-typescript-loader": "^5.2.1",
    "copyfiles": "^2.3.0",
    "css-loader": "^3.5.3",
    "delay": "^4.3.0",
    "jquery": "^3.5.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-shapeshifter": "^1.0.6",
    "react-spinners": "^0.8.3",
    "rimraf": "^3.0.2",
    "source-map-loader": "^1.0.0",
    "style-loader": "^1.2.1",
    "tslint": "^6.1.2",
    "typescript": "^3.9.3",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "arrive": "^2.4.1",
    "eventemitter3": "^4.0.4",
    "golden-layout": "^1.5.9",
    "javascript-detect-element-resize": "^0.5.3",
    "lodash-es": "^4.17.15",
    "mutation-observer": "^1.0.3",
    "prop-types": "^15.7.2",
    "react-badger": "^2.0.3",
    "react-beautiful-dnd": "^13.0.0"
  },
  "peerDependencies": {
    "jquery": "^3.4.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2"
  }
}
